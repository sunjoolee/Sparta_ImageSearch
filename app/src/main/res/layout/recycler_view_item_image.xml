<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded"
    android:backgroundTint="@color/theme_secondary"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:maxHeight="214dp"
        android:minHeight="120dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/theme_bg"
        android:clipToOutline="true"
        android:src="@drawable/icon_loading"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_image_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Daum 카페"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/iv_heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_image" />

    <TextView
        android:id="@+id/tv_image_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2023-01-25 23:52:34"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/iv_heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_image_source" />

    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:src="@drawable/icon_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_image" />

</androidx.constraintlayout.widget.ConstraintLayout>